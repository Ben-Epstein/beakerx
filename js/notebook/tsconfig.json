{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "ES2015",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "lib": ["dom", "es5", "es2015.promise"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}